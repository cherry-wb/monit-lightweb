<div class="wrap">
  <%= board_tag do %>
    <%= board_header_tag do %>
      <%= link_to t(@object.class.name.downcase), polymorphic_path(@object.class) %> /
      <%=link_to(@object.name, @object) %> /
      <%= t("select_type") %>
    <% end %>
    <%= board_content_tag do %>
      <div id="service-types">
        <%= render :partial => "types_#{@object.class.name.downcase}" %>
      </div>
    <% end %>
  <% end %>
</div>

